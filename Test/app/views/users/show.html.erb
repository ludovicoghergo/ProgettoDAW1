      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
                      <%= link_to "About", about_index_path, :class => "nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "Catalog", catalog_index_path, :class => "nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "Contact", contact_index_path, :class => "nav-link"%>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownPortfolio" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              FFU
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownPortfolio">
              <a class="dropdown-item" href="#">Page 1</a>
              <a class="dropdown-item" href="#">Page 2</a>
              <a class="dropdown-item" href="#">Page 3</a>
              <a class="dropdown-item" href="#">Page 4</a>
              <a class="dropdown-item" href="#">Page 5</a>
            </div>
          </li>

          <li class="nav-item dropdown">
            <a class="nav-link" href="#" id="navbarDropdownPortfolio" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fa fa-fw fa-user"></i>
            </a>
            <% if logged_in? %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownPortfolio">
              <%= link_to "Your Account", user_show_path, :class => "dropdown-item"%>
              <%= link_to "Log Out", logout_path, :class => "dropdown-item"%>
            </div>
            <% else %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownPortfolio">
              <%= link_to "Login", sessions_welcome_path, :class => "dropdown-item"%>
              <%= link_to "Register", sessions_new_path, :class => "dropdown-item"%>
            </div>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="row my-2">
        <div class="col-lg-8 order-lg-2">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="" data-target="#profile" data-toggle="tab" class="nav-link active">Profile</a>
                </li>
                <li class="nav-item">
                    <a href="" data-target="#messages" data-toggle="tab" class="nav-link">Messages</a>
                </li>
                <li class="nav-item">
                    <a href="" data-target="#edit" data-toggle="tab" class="nav-link">Edit</a>
                </li>
            </ul>
            <div class="tab-content py-4">
                <div class="tab-pane active" id="profile">
                    <h5 class="mb-3">User Profile</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <h6>About</h6>
                            <p>
                                Still working on..
                            </p>
                            <h6>Hobbies</h6>
                            <p>
                                Still working on..
                            </p>
                        </div>
                        <div class="col-md-12">
                            <h5 class="mt-2"><%= link_to "Delete Account", deleteaccount_path, :class => "btn btn-danger"%></h5>
                        </div>
                    </div>
                    <!--/row-->
                </div>
                <div class="tab-pane" id="messages">
                    <div class="alert alert-info alert-dismissable">
                        <a class="panel-close close" data-dismiss="alert">Ã—</a> This is an <strong>.alert</strong>. Use this to show important messages to the user.
                    </div>
                    <table class="table table-hover table-striped">
                        <tbody>
                            <tr>
                                <td>
                                   <span class="float-right font-weight-bold">3 hrs ago</span> Here is your a link to the latest summary report from the..
                                </td>
                            </tr>
                            <tr>
                                <td>
                                   <span class="float-right font-weight-bold">Yesterday</span> There has been a request on your account since that was..
                                </td>
                            </tr>
                            <tr>
                                <td>
                                   <span class="float-right font-weight-bold">9/10</span> Porttitor vitae ultrices quis, dapibus id dolor. Morbi venenatis lacinia rhoncus.
                                </td>
                            </tr>
                            <tr>
                                <td>
                                   <span class="float-right font-weight-bold">9/4</span> Vestibulum tincidunt ullamcorper eros eget luctus.
                                </td>
                            </tr>
                            <tr>
                                <td>
                                   <span class="float-right font-weight-bold">9/4</span> Maxamillion ais the fix for tibulum tincidunt ullamcorper eros.
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane" id="edit">
                    <%= form_with(url: "/update", method: "post") do |form| %>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">First name</label>
                            <div class="col-lg-9">
                                <%= form.text_field :fname, class: 'form-control',value:current_user.fname%>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Last name</label>
                            <div class="col-lg-9">
                                <%= form.text_field :lname, class: 'form-control',value:current_user.lname%>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Age</label>
                            <div class="col-lg-9">
                                <%= form.text_field :age, class: 'form-control',value:current_user.age %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Sex</label>
                            <div class="col-lg-9">
                                <%= form.text_field :sex, class: 'form-control',value:current_user.sex%>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Username</label>
                            <div class="col-lg-9">
                                <%= form.text_field :username, class: 'form-control',value:current_user.username%>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Email</label>
                            <div class="col-lg-9">
                                <%= form.text_field :email, class: 'form-control',value:current_user.email%>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">State</label>
                            <div class="col-lg-9">
                                <%= form.text_field :state, class: 'form-control',value:current_user.state%>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Zip</label>
                            <div class="col-lg-9">
                                <%= form.text_field :zip, class: 'form-control',value:current_user.zip%>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label"></label>
                            <div class="col-lg-9">
                                <input type="reset" class="btn btn-secondary" value="Cancel">
                                <%= submit_tag 'Save Changes', class: 'btn btn-primary'%>
                            </div>
                        </div>
                    <%end%>
                </div>
            </div>
        </div>
        <div class="col-lg-4 order-lg-1 text-center">
            <%= form_with(url: "/updateavatar", method: "post") do |form| %>
              <% if @user.avatar.attached? %>
                <%=image_tag(current_user.avatar, size: '100x100',class: "rounded-circle")%>
              <% else %>
                <img src="//placehold.it/150"  size='100x100' class="rounded-circle" alt="avatar">
              <% end %>
              <h6 class="mt-2">Upload a different photo</h6>
              <%= form.file_field :avatar %>
              <%= form.submit 'Upload', :class => 'btn btn-primary' %>
            <% end %>
        </div>
    </div>
</div>

</body>

</html>
